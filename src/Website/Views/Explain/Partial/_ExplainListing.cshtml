@model Website.Models.ExplainViewModels.ExplainListingViewModel
@using Website.Extensions

@if (Model.RecordList != null)
{
    <h2>Explains</h2>

    <br />

    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Created</th>
                <th>Query</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var record in Model.RecordList.OrderByDescending(r => r.CreateDateTime))
        {
            <tr>
                <td>@record.CreateDateTime</td>
                <td>@record.SolrQuery.Truncate(50)</td>
                <td>@Html.ActionLink("View", "Explain", new { guid = record.Guid }, new { @Class = "btn btn-info pull-right" }) </td>
            </tr>
        }
    </table>
}